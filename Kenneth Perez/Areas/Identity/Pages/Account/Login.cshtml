@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h4 class="text-success">Hola, llego la hora de Ingresar</h4>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <h6 class="text-dark">Correo</h6>
                    <input asp-for="Input.Email" class="form-control" placeholder="Ingrese su Correo" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h6 class="text-dark">Contraseña</h6>
                    <input asp-for="Input.Password" class="form-control" placeholder="Ingrese Contraseña" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label class="text-primary">
                            Recuerdame
                            <input asp-for="Input.RememberMe" />
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fa fa-user"></i> Ingresar</button>
                </div>
           
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Olvido su contraseña?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar nuevo usuario.</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
