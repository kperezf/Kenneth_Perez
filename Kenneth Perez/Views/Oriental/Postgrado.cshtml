@model List<Kenneth_Perez.Models.Categoria>

@{
    ViewData["Title"] = "Oriental";

}

<h4 class="text-success">Administración de Categorías</h4>

<div>
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>
                    Id_Categoria
                </th>
                <th>
                    Nombre Categoria
                </th>
                <th>
                    Descripcion
                </th>
                <th>
                    Fecha Creacion
                </th>
                <th>
                    Acciones a Realizar
                </th>
            </tr>
        </thead>

        <tbody>
            @{
                foreach (var categoria in Model)
                {
                    <tr>
                        <td>@categoria.IdCategoria</td>
                        <td>@categoria.Nombre</td>
                        <td>@categoria.Descripcion</td>
                        <td>@categoria.Fecha</td>
                        <td>
                            <a class="btn btn-info" href=@Url.Action("Editarcate", new{IdCategoria = categoria.IdCategoria})>Editar</a>
                            <a class="btn btn-danger" asp-action="Eliminarcate">Eliminar</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <a class="btn btn-success mt-1" href="~/Home/Editarcat">Nueva Categoria</a>
</div>