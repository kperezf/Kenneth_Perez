@model List<Kenneth_Perez.Models.Categoria>

@{
    ViewData["Title"] = "Oriental";

}

<h4 class="text-success">Administración de Categorías</h4>

<div>
    <table class="table table-striped tabla-Categorias">
        <thead class="table-dark">
            <tr>
                <th>
                    Id_Categoria
                </th>
                <th>
                    Nombre Categoria
                </th>
                <th>
                    Descripcion
                </th>
                <th>
                    Fecha Creacion
                </th>
                <th>
                    Acciones a Realizar
                </th>
            </tr>
        </thead>

        <tbody>
            @{
                foreach (var categoria in Model)
                {
                    <tr>
                        <td>@categoria.IdCategoria</td>
                        <td>@categoria.Nombre</td>
                        <td>@categoria.Descripcion</td>
                        <td>@categoria.Fecha</td>
                        <td>
                            <a class="btn btn-info" href=@Url.Action("Editarcate", new{IdCategoria = categoria.IdCategoria})><i class="fa fa-pen fa-xs"></i>Editar</a>
                            <a class="btn btn-danger" href=@Url.Action("Eliminarcate", new{IdCategoria = categoria.IdCategoria})><i class="fa fa-trash fa-xs"></i>Eliminar</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="text-center container mt-1">
    <a class="btn btn-success" href="~/Home/Editarcat"><i class="fa fa-cart-arrow-down"></i> Nueva Categoria</a> <i class="fa-regular fa-trash-can"></i>
</div>


@section Scripts{
   <script>
       $('.tabla-Categorias').DataTable(); 
   </script>
}